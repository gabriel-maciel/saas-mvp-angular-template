{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Feature Flags Configuration",
  "description": "Runtime feature toggles for the SaaS MVP template",
  "type": "object",
  "required": ["flags"],
  "properties": {
    "flags": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z][a-zA-Z0-9]*$": {
          "type": "object",
          "required": ["enabled", "description"],
          "properties": {
            "enabled": {
              "type": "boolean",
              "description": "Whether the feature is enabled"
            },
            "description": {
              "type": "string",
              "description": "Human-readable description of the feature"
            },
            "rolloutPercentage": {
              "type": "number",
              "minimum": 0,
              "maximum": 100,
              "description": "Percentage of users who see this feature (0-100)"
            }
          }
        }
      }
    }
  }
}
